<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        摘要列表
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>#</th>
              <th>檔案名稱</th>
              <th>摘要文件</th>
              {{#if admin}}
                <th>投稿者</th>
              {{/if}}
            </tr>
          </thead>
          <tbody>
            {{#each summary}}
              <tr>
                <td>{{plusOne @index}}</td>
                <td>{{procName path}}</td>
                <td>
                  <a href="/{{procPath path}}"><i class="fa fa-file-code-o" aria-hidden="true"></i> 摘要文件</a>
                </td>
                {{#if ../admin}}
                  <td>
                    <a href="mailto:{{this.email}}">{{name}}</a>
                  </td>
                {{/if}}
              </tr>
            {{/each}}
          </tbody>
        </table>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
  <div class="col-lg-12">
    <div class="panel panel-success">
      <div class="panel-heading">
        投稿列表
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>#</th>
              <th>檔案名稱</th>
              <th>投稿文件</th>
              <th width="10%">審查Ａ</th>
              <th width="10%">審查Ｂ</th>
              {{#if admin}}
                <th width="10%">總評比</th>
                <th>投稿者</th>
              {{/if}}
            </tr>
          </thead>
          <tbody>
            {{#each contributes}}
              <tr>
                <td>{{plusOne @index}}</td>
                <td>{{procName path}}</td>
                <td>
                  <a href="/{{procPath path}}"><i class="fa fa-file-code-o" aria-hidden="true"></i> 投稿文件</a>
                </td>
                <td>
                  <a href="/admin/contribute/{{id}}/comment/0" class="btn btn-success">審查評分</a>
                </td>
                <td>
                  <a href="/admin/contribute/{{id}}/comment/1" class="btn btn-warning">審查評分</a>
                </td>
                {{#if ../admin}}
                  <td>
                    <a href="/admin/contribute/{{id}}/comment/3" class="btn btn-warning">總評比</a>
                  </td>
                  <td>
                    <a href="mailto:{{this.email}}">{{name}}</a>
                  </td>
                {{/if}}
              </tr>
            {{/each}}
          </tbody>
        </table>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
  <div class="col-lg-12">
    <div class="panel panel-warning">
      <div class="panel-heading">
        簡報列表
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
