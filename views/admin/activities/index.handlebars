<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        現在活動 - <a href="/admin/activities/{{info.act.id}}/show" class="btn btn-xs btn-warning">{{info.act.title}}</a>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th>標題</th>
              <th>主辦單位</th>
              <th>活動時間</th>
              <th width="25%">操作</th>
            </tr>
          </thead>
          <tbody>
            {{#each activities}}
              <tr>
                <td>{{title}}</td>
                <td>{{organizer}}</td>
                <td>{{date}}</td>
                <td>
                  <a href="/admin/activities/{{id}}/show" class="btn btn-primary btn-xs">查看</a>
                  <a href="/admin/activities/{{id}}/edit" class="btn btn-success btn-xs">編輯</a>
                  {{#if_neq id ../info.act.id}}
                    <a href="/admin/activities/{{id}}/default" class="btn btn-warning btn-xs">設為主要</a>
                    <a href="/admin/activities/{{id}}/destroy" class="btn btn-danger btn-xs" onclick="return handleDelete('確定刪除？')">刪除</a>
                  {{/if_neq}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<script type="text/javascript">
  function handleDelete(msg) {
    if (confirm(msg)) {
      return true
    } else {
      return false
    }
  }
</script>
