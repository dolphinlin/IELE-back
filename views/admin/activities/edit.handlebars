<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Panel title</h3>
  </div>
  <div class="panel-body">
    <form method="post" action="/admin/activities/{{activity.id}}/update">
      <div class="form-group">
        <label for="title">活動名稱</label>
        <input type="text" class="form-control" name="title" placeholder="活動名稱" value="{{activity.title}}" required>
      </div>
      <div class="form-group">
        <label for="content">活動內容</label>
        <textarea name="content" rows="8" cols="80" class="form-control" required>{{activity.content}}</textarea>
      </div>
      <div class="form-group">
        <label for="organizer">主辦單位</label>
        <input type="text" class="form-control" name="organizer" placeholder="主辦單位" value="{{activity.organizer}}" required>
      </div>
      <div class="form-group">
        <label for="coorganizer">協辦單位</label>
        <input type="text" class="form-control" name="coorganizer" placeholder="協辦單位" value="{{activity.coorganizer}}">
      </div>
      <div class="form-group">
        <label for="date">活動日期</label>
        <input type="date" class="form-control" name="date" placeholder="活動日期" value="{{activity.date}}" required>
      </div>
      <div class="form-group">
        <label for="place">活動地點</label>
        <input type="text" class="form-control" name="place" placeholder="活動地點" value="{{activity.place}}" required>
      </div>
      <div class="form-group">
        <button class="btn btn-warning btn-block">編輯</button>
      </div>
    </form>
  </div>
</div>
