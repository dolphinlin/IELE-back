<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <!-- Default panel contents -->
      <div class="panel-heading">{{activity.title}}</div>
      <div class="panel-body">
        <p>
          <strong>
            {{{activity.content}}}
          </strong>
        </p>
      </div>
      <!-- Table -->
      <table class="table table-hover">
        <thead>
          <tr>
            <th width="20%">＃</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><b>主辦單位</b></td>
            <td>{{activity.organizer}}</td>
          </tr>
          <tr>
            <td><b>協辦單位</b></td>
            <td>{{activity.coorganizer}}</td>
          </tr>
          <tr>
            <td><b>活動時間</b></td>
            <td>{{activity.date}}</td>
          </tr>
          <tr>
            <td><b>活動地點</b></td>
            <td>{{activity.place}}</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="panel panel-success">
      <!-- Default panel contents -->
      <div class="panel-heading">報名人數</div>
      <!-- Table -->
      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>姓名</th>
            <th>身分證</th>
            <th>聯絡電話</th>
            <th>連絡信箱</th>
            <th>餐點葷素</th>
          </tr>
        </thead>
        <tbody>
          {{#each signups}}
            <tr>
              <td>{{plusOne @index}}</td>
              <td>{{name}}</td>
              <td>{{ic}}</td>
              <td>{{phone}}</td>
              <td>{{email}}</td>
              {{#if food}}
                <td class="text-danger">素</td>
              {{else}}
                <td >葷</td>
              {{/if}}
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
